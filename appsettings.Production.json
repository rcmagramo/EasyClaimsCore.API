{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "EasyClaimsCore.API": "Information"
    }
  },
  "Serilog": {
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "/var/log/easyclaims/easyclaims-api-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 90
        }
      },
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Name=ConnectionStrings:DefaultConnection",
          "sinkOptionsSection": {
            "tableName": "Logs",
            "autoCreateSqlTable": true
          }
        }
      }
    ]
  },
  "PhilHealth": {
    "RestBaseUrl": "https://claims.philhealth.gov.ph/",
    "SkipEClaimsFileCheck": false,
    "UseMockResult": false,
    "TimeoutMinutes": 5
  },
  "Authentication": {
    "RequireHttpsMetadata": true
  }
}